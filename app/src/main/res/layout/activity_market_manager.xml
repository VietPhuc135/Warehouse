<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:layout_weight="10">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/lobster"
        android:text="Market Manager"
        android:layout_weight="0.5"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.5"
        android:padding="5dp"
        android:gravity="center">

        <EditText
            android:id="@+id/searchMarket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:background="#11AA9E9E"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:ems="15"
            android:hint="Search Market"
            android:inputType="textPersonName"
            android:gravity="center"
            android:textColor="#000000"
            android:textColorHint="#423D3D"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imgArrageMarket"
            android:layout_marginLeft="10dp"
            android:src="@drawable/arrange"/>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lvMarket"
        android:textColor="#431919"
        android:layout_weight="9"/>
